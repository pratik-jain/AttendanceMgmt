@model AttendanceMgmt.ViewModels.vUser

@{
    ViewBag.Title = "AddHr";
}
    <link rel="stylesheet" href="~/StyleSheet/SignUp.css" type="text/css" />
    

@using (Html.BeginForm("AddHr","AddUser",FormMethod.Post,new {enctype="multipart/form-data" }))
