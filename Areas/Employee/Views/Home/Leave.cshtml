
@{
    ViewBag.Title = "Leaves";
}


<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.21/datatables.min.css" />

<select id="month" name="month">
    <option>January</option>
    <option>February</option>
    <option>March</option>
    <option>April</option>
    <option>May</option>
    <option>June</option>
    <option>July</option>
    <option>August</option>
    <option>September</option>
    <option>October</option>
    <option>November</option>
    <option>December</option>
</select>
<table id="tbAllUsers" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>LeaveId</th>
            <th>UserId</th>
            <th>From Date</th>
            <th>ToDate</th>
            <th>Approve</th>
            <th>Reason</th>            

        </tr>
    </thead>
</table>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.21/datatables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        var date = new Date();
        var month = date.toLocaleString('default', { month: 'long' });
        $("#month").val(month);
        var tb = $("#tbAllUsers").dataTable({
            "processing": true,
            "pageLength": 10,
            "ajax": {
                "url": "/Employee/Home/GetUserLeave?month=" + month,
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "LeaveId", "name": "LeaveId" },
                { "data": "UserId", "name": "UserId" },
                { "data": "FromDate", "name": "FromDate" },
                { "data": "ToDate", "name": "ToDate" },
                { "data": "IsApproved", "name": "AprrovedBy" },
                { "data": "Reason", "name": "Reason" }                
            ],
            "aoColumnDefs": [
                {
                    "aTargets": [4],
                    "mRender": function (data, type, full) {
                         if (full.isApproved == true) {
                            return "accepted";
                        }    
                        else if (full.isApproved == false) {
                            return "Rejected";
                        }
                        else {
                            return "Not set";
                        }
                    }                              
                }
            ]
        });
        $("#month").change(function () {
            month = $(this).children("option:selected").val();
            tb.fnClearTable();
            tb.fnDestroy();
            $("#tbAllUsers").dataTable({
                "processing": true,
                "pageLength": 10,
                "ajax": {
                    "url": "/Employee/Home/GetUserLeave?month=" + month,
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "LeaveId", "name": "AttendanceId" },
                    { "data": "UserId", "name": "UserId" },
                    { "data": "FromDate", "name": "Date" },
                    { "data": "ToDate", "name": "FromTime" },
                    { "data": "Aprrove", "name": "ToTime" },
                    { "data": "Reason", "name": "IsApproved" }                    
                ],
                "aoColumnDefs": [
                    {
                        "aTargets": [4],
                        "mRender": function (data, type, full) {
                             if (full.isApproved == true) {
                                return "accepted";
                            }    
                            else if (full.isApproved == false) {
                                return "Rejected";
                            }
                            else {
                                return "Not set";
                            }
                        }  
                    }                                       
                ]
            });
        });

    });
</script>
